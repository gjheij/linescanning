# SPM BRAIN MASK SCRIPT
function make_mask_script {

  if [[ $# -ne 3 ]]; then
    echo "Received only ${#} arguments, need 3:"
    count=0; for ii in "${@}"; do ((count++)); echo " ${count}.) ${ii}"; done
    echo
    echo "---------------------------------------------------------------------------------------------------"
    echo "make_mask_script"
    echo
